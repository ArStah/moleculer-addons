{
  "name": "moleculer-addons",
  "description": ":gift: Official addons (services, transporters, cachers...etc) for Moleculer framework",
  "version": "1.0.0",
  "scripts": {
    "setup": "npm install && lerna bootstrap",
    "clean": "lerna clean",
    "release": "lerna publish",
    "test": "jest --coverage",
    "ci": "jest --watch",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "init:service": "cd services && moleculer init addon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ice-services/moleculer-addons.git"
  },
  "keywords": [],
  "author": "Ice Services",
  "license": "MIT",
  "homepage": "https://github.com/ice-services/moleculer-addons#readme",
  "devDependencies": {
    "coveralls": "2.13.1",
    "eslint": "3.19.0",
    "jest": "20.0.3",
    "jest-cli": "20.0.3",
    "lerna": "2.0.0-rc.5"
  },
  "dependencies": {
    "moleculer-cli": "0.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/services/"
    ]
  }
}
