	"version": "0.2.0",
	"configurations": [

		{
			"type": "node",
			"request": "launch",
			"name": "Launch demo",
			"program": "${workspaceRoot}\\dev",
			"cwd": "${workspaceRoot}",
			"args": [
				"stores\\moleculer-db-adapter-mongoose",
				"populates"
			]
		},

		{
			"type": "node",
			"request": "launch",
			"name": "Launch readme",
			"program": "${workspaceRoot}\\readme-generator",
			"cwd": "${workspaceRoot}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest",
			"program": "${workspaceRoot}\\node_modules\\jest-cli\\bin\\jest.js",
			"args": ["--runInBand"],
			"cwd": "${workspaceRoot}",
			"runtimeArgs": [
                "--nolazy"
            ]
		}
	]
}